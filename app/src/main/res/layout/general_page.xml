<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="frc.team449.deepspacescoutingapp.activities.General"
    style="@style/Background">

    <!--Dead Text-->
    <TextView
        style="@style/Text"
        android:id="@+id/deadText"
        android:text="Dead?"
        android:layout_marginStart="@dimen/startMargin"
        android:layout_marginTop="@dimen/spaceBetweenFields"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/deadHelp"
        style="@style/Help"
        app:layout_constraintStart_toEndOf="@id/deadText"
        app:layout_constraintTop_toTopOf="@id/deadText"
        app:layout_constraintBottom_toBottomOf="@+id/deadText"/>

    <!--Dead Radio Buttons-->
    <RadioGroup
        style="@style/Wrap"
        android:id="@+id/dead"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/startMargin"
        app:layout_constraintTop_toBottomOf="@id/deadText">

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/alive"
            android:text="Alive" />

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/broken"
            android:text="Broken" />

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/halfDead"
            android:text="Half Dead" />

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/deadAll"
            android:text="Dead" />

    </RadioGroup>

    <TextView
        style="@style/Text"
        android:id="@+id/defenseText"
        android:layout_marginStart="@dimen/startMargin"
        android:layout_marginTop="15dp"
        android:text="Defense Attempted?"
        app:layout_constraintTop_toBottomOf="@id/dead"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageButton
        android:id="@+id/defenseHelp"
        style="@style/Help"
        app:layout_constraintStart_toEndOf="@id/defenseText"
        app:layout_constraintTop_toTopOf="@id/defenseText"
        app:layout_constraintBottom_toBottomOf="@+id/defenseText"/>

    <CheckBox
        style="@style/Checkbox"
        android:id="@+id/defense"
        android:layout_marginStart="60dp"
        app:layout_constraintTop_toTopOf="@id/defenseText"
        app:layout_constraintStart_toEndOf="@id/defenseText"/>

    <TextView
        style="@style/Text"
        android:id="@+id/defenseQualityText"
        android:layout_marginStart="@dimen/startMargin"
        android:layout_marginTop="15dp"
        android:text="How was the defense?"
        app:layout_constraintTop_toBottomOf="@id/defense"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageButton
        android:id="@+id/defenseQualityHelp"
        style="@style/Help"
        app:layout_constraintStart_toEndOf="@id/defenseQualityText"
        app:layout_constraintTop_toTopOf="@id/defenseQualityText"
        app:layout_constraintBottom_toBottomOf="@+id/defenseQualityText"/>

    <RadioGroup
        style="@style/Wrap"
        android:id="@+id/defenseQuality"
        android:layout_marginTop="@dimen/spaceBetweenFields"
        android:layout_marginStart="@dimen/startMargin"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/defenseQualityText">

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/defenseNA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N/A" />

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/defenseBad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/thumb_down"/>

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/defenseNeutral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/thumbs_both" />

        <RadioButton
            style="@style/RadioButton"
            android:id="@+id/defenseGood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/thumb_up" />

    </RadioGroup>

    <!--Comments Text-->
    <TextView
        style="@style/Text"
        android:text="Additional Comments"
        android:id="@+id/commentsText"
        android:layout_marginStart="@dimen/startMargin"
        android:layout_marginTop="@dimen/spaceBetweenFields"
        app:layout_constraintTop_toBottomOf="@id/defenseQuality"
        app:layout_constraintStart_toStartOf="parent" />

    <!--Comments-->
    <EditText
        style="@style/TextBox"
        android:id="@+id/comments"
        android:layout_marginStart="@dimen/startMargin"
        android:layout_marginTop="@dimen/spaceBetweenFields"
        android:hint="Comments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/commentsText"/>

</android.support.constraint.ConstraintLayout>